{% extends "RssRecommendBundle::layout.html.twig" %}

{% block title %}登録/ログイン画面 | {{ parent() }}{% endblock %}

{% block content %}
  {% if error %}
    <div>{{ error.message }}</div>
  {% endif %}
  {{ form_start(form, {'method': 'post', 'action': path("login_check") }) }}
    {{ form_row(form.user_name) }}
    {{ form_row(form.password.first) }}
    {{ form_row(form._token) }}
    <input type="submit" name="login_submit" value="ログイン">
  {{ form_end(form, {'render_rest': false}) }}
  <form method="get">
      <input type="button" value="新規登録" onClick="location.href='{{ path("rss_recommend_newuser") }}';">
  </form>
{% endblock %}
